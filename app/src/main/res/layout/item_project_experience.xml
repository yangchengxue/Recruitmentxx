<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_projectname"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人脸识别app的研究与设计"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentStart="true"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/tvx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_projectname"
        android:layout_toEndOf="@+id/tv_projectname"
        android:text=" · "/>
    <TextView
        android:id="@+id/tv_projecPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvx2"
        android:layout_toEndOf="@+id/tvx2"
        android:text="成员"/>

    <TextView
        android:id="@+id/tvx3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_projectname"
        android:text="任职时间：" />

    <TextView
        android:id="@+id/tv_time1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_projectname"
        android:layout_toEndOf="@+id/tvx3"
        android:text="2017.01" />

    <TextView
        android:id="@+id/tvx4"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_projectname"
        android:layout_toEndOf="@+id/tv_time1"
        android:text=" - " />

    <TextView
        android:id="@+id/tv_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_projectname"
        android:layout_toEndOf="@+id/tvx4"
        android:layout_marginTop="10dp"
        android:text="2018.06" />

    <TextView
        android:id="@+id/tv_programIntroduction"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tvx3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SchoolProfiles"/>

    <TextView
        android:id="@+id/tv_projectgrade"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tv_programIntroduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SchoolProfiles"/>

</RelativeLayout>
