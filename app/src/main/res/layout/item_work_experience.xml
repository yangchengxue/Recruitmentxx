<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_workname"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广西威图电力设备有限公司"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentStart="true"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/tvx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_workname"
        android:layout_toEndOf="@+id/tv_workname"
        android:text=" · "/>
    <TextView
        android:id="@+id/tv_workPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvx2"
        android:layout_toEndOf="@+id/tvx2"
        android:text="实习生"/>

    <TextView
        android:id="@+id/tvx3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_workname"
        android:text="任职时间：" />

    <TextView
        android:id="@+id/tv_time1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_workname"
        android:layout_toEndOf="@+id/tvx3"
        android:text="2017.01" />

    <TextView
        android:id="@+id/tvx4"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_workname"
        android:layout_toEndOf="@+id/tv_time1"
        android:text=" - " />

    <TextView
        android:id="@+id/tv_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_workname"
        android:layout_toEndOf="@+id/tvx4"
        android:layout_marginTop="10dp"
        android:text="2018.06" />

    <TextView
        android:id="@+id/tv_workContent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tvx3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SchoolProfiles"/>

    <TextView
        android:id="@+id/tv_workgrade"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tv_workContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SchoolProfiles"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/tv_workgrade">

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/id_flowlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            zhy:max_select="-1" />
    </LinearLayout>
</RelativeLayout>
