<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">
                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.02" />
                <RelativeLayout
                    android:id="@+id/RelativePrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/im1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:src="@drawable/primessage" />

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_below="@+id/im1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/title_Notice" />
                </RelativeLayout>
                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.1" />
                <RelativeLayout
                    android:id="@+id/RelativeContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/im2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/person1" />

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_below="@+id/im2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/title_attentionPeople" />
                </RelativeLayout>
                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.02" />
                <RelativeLayout
                    android:id="@+id/RelativeAddUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/im3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/adduserblack" />

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_below="@+id/im3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="添加关注" />
                </RelativeLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.02" />

            </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_below="@+id/card1"
        android:id="@+id/messageFragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>
