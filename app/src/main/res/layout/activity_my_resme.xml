<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.activity.MyResmeActivity">

    <RelativeLayout
        android:id="@+id/MyResmeActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_header_centerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="我的简历"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_header_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="9dp"
            android:gravity="center"
            android:text="分享" />

        <LinearLayout
            android:id="@+id/lin_header_back2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_header_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

    <com.example.ycx36.recruitment.util.MyReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="8dp"
                    android:textColor="@color/black"
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·个人信息"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/tv_name"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv1"
                    android:text="@string/NullString" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_name"
                    android:layout_toEndOf="@+id/tv_name"
                    android:text=" | "
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv4"
                    android:layout_toEndOf="@+id/tv4"
                    android:text="@string/NullString" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_alignBottom="@+id/tv_sex"
                    android:layout_toEndOf="@+id/tv_sex"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NullString"
                    android:layout_alignBottom="@+id/tv5"
                    android:layout_toEndOf="@+id/tv5"/>

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_alignBottom="@+id/tv_age"
                    android:layout_toEndOf="@+id/tv_age"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_nativeplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NullString"
                    android:layout_alignBottom="@+id/tv6"
                    android:layout_toEndOf="@+id/tv6"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_name"
                    android:text="毕业于" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_school"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_toEndOf="@+id/tv3"
                    android:text="@string/NullString" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_toEndOf="@+id/tv_school"
                    android:text="   ·  " />

                <TextView
                    android:id="@+id/tv_major"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_toEndOf="@+id/tv2"
                    android:text="@string/NullString" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/U_HeadPortraits"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="25dp"
                    android:layout_alignBottom="@+id/tv3"
                    android:layout_alignParentEnd="true"
                    fresco:placeholderImage="@drawable/logo_gxnu" />
            </RelativeLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@color/gray2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·工作经历"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView_workExperience"
                    android:layout_below="@+id/tvx1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@color/gray2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvxx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·项目经历"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView_ProjectExperience"
                    android:layout_below="@+id/tvxx1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@color/gray2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp">
                <TextView
                    android:id="@+id/tvxxx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·教育经历"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView_EducationExperience"
                    android:layout_below="@+id/tvxxx1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </com.example.ycx36.recruitment.util.MyReboundScrollView>

</LinearLayout>